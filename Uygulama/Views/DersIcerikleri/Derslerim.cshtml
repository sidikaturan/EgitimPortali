@using EgitimPortali.DTO
@model List<DersIcerikleriDto>

@{
    ViewData["Title"] = "Derslerim";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-md-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h5>Bütün Ders İçerikleri</h5>
                </div>
                <div class="ibox-content">
                  
                    <br />
                    <div class="table-responsive">
                        @foreach (var x in Model)
                        {
                            <table class="table shoping-cart-table">

                                <tbody>
                                    <tr>

                                        <td width="90">
                                            <img src="~/Edu-School-Starter/assets/images/merkez.jpg" style="max-width:100%;" />
                                        </td>
                                        <td class="desc">
                                            <h3>
                                                <a href="#" class="text-navy">
                                                    @x.Name
                                                </a>
                                            </h3>
                                            <div class="m-t-sm">
                                                <a href="/MerkezeTeget/Ders/@x.Id" data-id="@x.Id" class="text-muted "><i class="fa fa-link"></i> Görüntüle</a>
                                                <a href="/DersIcerikleri/DersGuncelle/@x.Id" data-id="@x.Id" class="text-muted"><i class="fa fa-edit"></i> Düzenle</a>
                                                <a href="/DersIcerikleri/DersSil/@x.Id" data-id="@x.Id" class="text-muted demo4"><i class="fa fa-trash"></i> Ders İçeriğini Kaldır</a>
                                            </div>
                                        </td>
                                        <td width="200">
                                            <h4>
                                                @(((DateTime)x.CreatedAt).ToString("dd-MMM-yyyy"))
                                            </h4>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>

                            <hr />
                        }
                    </div>
                </div>
                <div class="ibox-content">
                    @*                    @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))
                    *@
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/admin/js/jquery-3.1.1.min.js" type="text/javascript"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script>
    $('.demo4').on('click', function (event) {
        event.preventDefault();
        var btn = $(this);
        const url = $(this).attr('href');
        swal({
            title: 'Ders İçeriğini Silmek İstediğinizden Emin Misiniz ?',
            text: "Ders İçeriğini silmeniz durumunda kullanıcılar bu ders içeriğine bir daha asla ulaşamayacaktır.",
            icon: 'info',
            buttons: ["Vazgeç", "Onayla!"],
        }).then(function (value) {
            if (value) {
                var id = btn.data("id");
                $.ajax({
                    url: "/DersIcerikleri/DersSil/" + id,
                    type: "post",
                    dataType: "json",
                    success: function (func) {
                        window.location.reload();
                    },
                    error: function (xhr, ajaxOptions, thrownError) {
                        window.location.reload();
                    }
                });
            }
        });
    });
</script>
