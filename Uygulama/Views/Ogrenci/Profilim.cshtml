@using EgitimPortali.Request.Kullanicilar
@model KullanicilarUpdateRequest
@{
    ViewData["Title"] = "Profilim";
    Layout = "~/Views/Shared/_OgrenciLayout.cshtml";
}


<div class="col-lg-12">
    <div class="ibox ">
        <div class="ibox-title">
            <h5>Profilim<small></small></h5>
            <div class="ibox-tools">
            
            </div>
        </div>
        <div class="ibox-content">
            <div class="row">
                <div class="col-sm-12 b-r">
                    <h3 class="m-t-none m-b">Kullanıcı Bilgisi</h3>
                    <form method="post">
                        <input type="hidden" asp-for="Id" value="@ViewBag.id" />
                        <div class="form-group"><label>Ad</label> <input type="text" name="Ad" value="@Model.Ad" class="form-control"></div>
                        <div class="form-group"><label>Soyad</label> <input type="text" name="Soyad" value="@Model.Soyad" class="form-control"></div>
                        <div class="form-group"><label>E-mail</label> <input type="email" name="Mail"  value="@Model.Mail" class="form-control"></div>
                        <div>
                            <button class="btn btn-sm btn-primary float-right m-t-n-xs" type="submit"><strong>Kaydet</strong></button>
                        </div>
                    </form>
                </div>
              
            </div>
        </div>
    </div>
</div>