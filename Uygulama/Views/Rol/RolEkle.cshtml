@using EgitimPortali.Request.Roller
@model RollerPostRequest
@{
    ViewData["Title"] = "RolEkle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="ibox ">
    <div class="ibox-title">
        <h5>Yeni Rol Ekleme</h5>
        <div class="ibox-tools">
   
        </div>
    </div>
    <div class="ibox-content">
        <form method="post">
            <div class="form-group row">
                <label class="col-lg-2 col-form-label">Rol Adı</label>

                <div class="col-lg-10">
                    <input type="text" name="Name" placeholder="Öğrenci..." class="form-control"> <span class="form-text m-b-none"></span>
                </div>
            </div>
   
            <div class="form-group row">
                <div class="col-lg-offset-2 col-lg-10">
                    <button class="btn btn-sm btn-info" type="submit">Ekle</button>
                </div>
            </div>
        </form>
    </div>
</div>
