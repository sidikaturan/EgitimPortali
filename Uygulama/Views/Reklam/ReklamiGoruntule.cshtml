@using EgitimPortali.DTO
@model ReklamlarDto
@{
    ViewData["Title"] = "ReklamiGoruntule";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="ibox-content">
    <div class="col-lg-12">
        <div class="ibox ">
            <div class="ibox-title">
                <h5>Reklam Detay</h5>
            </div>
            <div class="ibox-content">
                    @Html.HiddenFor(x => x.UstBaslik, new { @class = "form-control" })
                    @Html.HiddenFor(x => x.Icerik, new { @class = "form-control" })

                    <div class="row">
                        <div class="col-sm-6 b-r">
                            <h3 class="m-t-none m-b">
                                Bu sayfada reklamın detaylarını görebilirsiniz.

                            </h3>
                            <div class="form-group">
                                <label>Reklam ÜstBaşlık</label>
                                <input type="text" placeholder="Form Adı" name="AnketAd" value="@Model.UstBaslik" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>Reklam İçeriği</label>
                                <input type="text" placeholder="Form Adı" name="AnketAd" value="@Model.Icerik" class="form-control">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <p class="text-center">
                                <img src="@Model.Gorsel" style="max-width: 100%" />
                            </p>
                        </div>
                    </div>
                    <br />
                    <br />
                    <br />
                    <br />
                    <br />
            </div>
        </div>
    </div>
</div>

